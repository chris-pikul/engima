{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2017",

    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types",

    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  },

  "lib": [ "ES2021", "DOM" ],

  "include": [ "src/**/*" ],
  "exclude": [ "node_modules" ]
}